<% include ../partials/header%>


    <div class="container">

        <header class="jumbotron">
            <div class="container">


                <h2>All Product Categories</h2>
                <p>
                    <a class="btn btn-primary btn-large" href="/productcategories/new">Add New Product Type</a>
                      <a class="btn btn-default btn-large" href="/productbrands">List Brands</a>
                      <a class="btn btn-default btn-large" href="/productauthors">List Authors</a>
                </p>
                <div class="container">


        </header>






  <% productCategories.forEach(function(productCategory){  %>
        <div class="well">
          <div class="row">
            <div class="col-xs-7">
                <h3><%= productCategory.productCategoryName %>   </h3>
            </div>
            <div class="col-xs-5">
                <h3>
                  <a class="btn btn-default btn-product-list" href="/productCategories/<%=productCategory._id%>"> List</a>
                  <a class="btn btn-default btn-product-add-new" href="/productCategories/<%=productCategory._id%>/products/new"> Add new <%= productCategory.productCategoryName %> </a>

                </h3>
            </div>
          </div>



        </div>
  <% }) %>






        </div>

        <% include ../partials/paginate%>

        <% include ../partials/footer%>

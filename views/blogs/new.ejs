<% include ../partials/header%>
<div class="container">
  <div class="row">

    <h1 style="text-align:center;"> Create a new blog</h1>
    <div  style="width:40%; margin:30px auto;">
      <form action="/blogs" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="title" placeholder="Name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="Image-URL" >
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="text" placeholder="text" >
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="author" placeholder="Author" >
        </div>
        <div class="form-group">
              <button class="btn btn-large btn-primary btn-block">Submit</button>
        </div>
      </form>

        <a href="/blogs">Go Back</a>
    </div>



  </div>
</div>

<% include ../partials/footer%>

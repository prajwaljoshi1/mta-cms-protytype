
<% include ../partials/header%>


<div class="container">
  <div class="well">
      <div class="media">
              <div class="main-image-div">
                <img class="media-object" src="<%= blog.blogMainImage %>">
              </div>
          <div class="media-body">
              <h1 class="media-heading"><%= blog.blogTitle %></h1>
              <h4>By <%= blog.blogAuthor %></h4>
              <h6><%= blog.blogPublishedDate %></h6>

              <div>
                  <%- blog.blogContentBrief %>
              </div>


<div class="col-md-6">

                  <div class="main-image-div">
                      <img class="media-object" src="<%= blog.blogAdditionalImage01 %>">
                  </div>
</div>
              <div class="col-md-6">
                  <%- blog.blogContentExtended %>
              </div>


              <p>
                <img class="media-object" src="<%= blog.blogAdditionalImage02 %>">
              </p>
              <p>
                <img class="media-object" src="<%= blog.blogAdditionalImage03 %>">
              </p>
              <div class="pull-right">
                <a class="btn btn-default" href="/blogs/<%=blog._id%>/edit" name="button">Edit</a>
                <form class="" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                  <button class="btn btn-default" name="button">Delete</button>
                </form>
              </div>

          </div>
      </div>
  </div>
</div>


<% include ../partials/footer%>

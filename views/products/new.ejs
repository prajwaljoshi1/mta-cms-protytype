<% include ../partials/header%>
    <div class="container">
        <div class="row">



            <h1 style="text-align:center;"> Add a new Product</h1>
            <div style="width:80%; margin:30px auto;">
                <form action="/productcategories/<%=productCategory._id%>/products" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Product Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="state" placeholder="State">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="price" placeholder="Price">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Quantity" placeholder="Quantity">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="mainImage" placeholder="Main Image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="additionalImage01" placeholder="First Additional Image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="additionalImage02" placeholder="Second Additional Image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="additionalImage03" placeholder="Third Additional Image">
                    </div>
                    <div class="form-group">
                        <textarea class="blog-body" class="form-control" type="text" name="additionalDescription" placeholder="Description"></textarea>
                    </div>


                      <% productCategory.productCategoryAdditionalFields.forEach(function(field){ %>

                            <div class="form-group">

                                  <input class="form-control" type="text" name="customAttributes[<%= field %>]" placeholder="  <%= field %>">
                              </div>

                    <%  }) %>












                    <div class="form-group">
                        <button class="btn btn-large btn-primary btn-block" >Submit</button>
                    </div>
                </form>

                <a href="/blogs">Go Back</a>
            </div>

            <script type="text/javascript">



                $(document).ready(function() {

                    $('.blog-body').summernote({
                        height: 300,
                        toolbar: [
                            // [groupName, [list of button]]
                            ['style', ['bold', 'italic', 'underline', 'clear']],
                            ['font', ['strikethrough', 'superscript', 'subscript']],
                            ['fontsize', ['fontsize']],
                            ['para', ['ul', 'ol', 'paragraph']],
                            ['link', ['link']]
                        ]
                      });




                      });





            </script>

        </div>
    </div>

    <% include ../partials/footer%>

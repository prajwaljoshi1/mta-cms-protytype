            var fleschKincaidTest = function (context) {
                var ui = $.summernote.ui;
                var previousScore = 0;

                  // create button
                    var button = ui.button({
                        contents: 'Test Reading Level',
                        tooltip: 'test Flesch-Kincaid reading level',
                        click: function () {
                          //removing everything between "<" ">" results a clean text
                          var cleanText = $("#product-description1").val().replace(/<\/?[^>]+(>|$)/g, "").replace(/&nbsp;/g, " ");                                    // come back to check
                          var wordCount = cleanText.split(' ').length;
                          if(wordCount > 1){
                          $.get( "/mtacms/flesch-kincaid/"+cleanText, function( result ) {


                                 $('#pd1-fk-test-result').html("<span  class='fk-test-words' align='left'>Words: "+ wordCount +"</span> ");
                                  if(previousScore){
                                   $('#pd1-fk-test-result').append("<span  class='fk-test-previous' align='right'>Previous: "+ previousScore +"</span> ");
                                  }

                                  $('#pd1-fk-test-result').append("<span class='fk-test-current' align='right'>Current: "+ result.score +" ("+result.grade+")</span> ");
                                  previousScore = result.score;



                            });

                          }else {
                             $('#pd1-fk-test-result').html(" <p>Nothing to test.</p> ");
                          }
                        }
                      });

                      return button.render();   // return button as jquery object
                    }



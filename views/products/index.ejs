<% include ../partials/header%>


    <div class="container">

        <header class="jumbotron">
            <div class="container">


                <h2>All Products</h2>
                <p>
                    <a class="btn btn-primary btn-large" href="/products/new">Add New Product</a>
                </p>
                <div class="container">


        </header>






  <% products.forEach(function(product){  %>
        <div class="well">
            <div class="media">
                <a class="pull-left" href="#">
                    <img class="media-object" src="<%= product.productMainImage %>" height="128px" width='128px'>
                </a>
                <div class="media-body">
                    <h4 class="media-heading"><%= product.productName %></h4>
                    <p>By <%= product.productCost %></p>
                    <p><%= product.productQuantity %></p>

                    <div>
                        <a class="btn btn-default" href="/products/<%=product._id%>">Show</a>
                    </div>

                </div>
            </div>
        </div>
              <% }) %>






        </div>

        <% include ../partials/footer%>
